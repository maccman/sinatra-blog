@import './mixins'

*, *:before, *:after {
  box-sizing: border-box
}

body, html {
  margin: 0
  padding: 0
}

body {
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  background: #FFF

  color: #444
  font: 19px/1.5em "proxima-nova", "OpenSans", "HelveticaNeue", Helvetica, Arial, sans-serif
}

a {
  text-decoration: underline
  color: #4b525b
}

// Site specific

.wrap {
  margin: 0 auto
}

header.header {
  overflow: hidden
  font-family: "Open Sans", sans-serif
  font-size: 18px
  font-weight: 600
  user-select: none

  a {
    text-decoration: none
  }

  nav {
    height: 40px
    line-height: 70px
    margin: auto
    padding: 0 15px

    h1.logo {
      float: left
      margin: 0
      font-size: 22px
    }
  }
}

article.main {
  padding: 15px

  section {
    position: relative
    padding: 0 0 80px 0
    margin: 0 0 80px 0

    header {
      margin-bottom: 25px

      h2 {
        font-weight: 600
        font-size: 30px
        margin: 0 0 6px 0
        font-family: "Open Sans", sans-serif
        line-height: 35px

        a {
          text-decoration: none
        }
      }

      h3.draft {
        font-weight: normal
        font-style: italic
        font-size: 23px
        color: #777
      }

      h3.author {
        margin: 0
        color: #6A6A6A
        font-weight: normal
        font-style: italic
        font-size: 15px
        display: inline

        a {
          color: #6A6A6A
          text-decoration: none
        }
      }

      time {
        display: inline
        color: #6A6A6A
        font-weight: normal
        font-style: italic
        font-size: 15px
        color: #6A6A6A

        a {
          color: #6A6A6A
          text-decoration: none
        }
      }
    }

    .body {
      hr {
        border: 0
        height: 2px
        background: #F6F6F6
        max-width: 350px
        margin: 30px auto
        border-radius: 5px
      }

      h3 {
        font-size: 22px
        font-weight: 600
      }

      h4 {
        font-size: 19px
        margin: 0 0 -0.5em 0
      }

      a {
        text-decoration: none
        font-weight: 600
        border-bottom: 2px solid #F4F4F4
      }

      a:hover {
        text-decoration: none
        border-bottom: 2px solid #DDDDDD
      }

      b, strong {
        font-weight: 600
      }

      p {
        margin: 1em 0

        &:last-child {
          margin-bottom: 0
        }
      }

      ul {
        padding: 0 20px
      }

      ul li, ol li {
        margin: 0 0 10.5px 0
      }

      img {
        max-width: 100%;
        display: block
        border: 3px solid #F6F6F6
        margin: 1em 0

        &.center {
          margin: 1em auto
        }
      }

      blockquote {
        border-left: 5px solid #F6F6F6
        margin: 2em 20px
        padding: 0 15px
      }

      table {
        border-left: 5px solid #F6F6F6;
        margin: 2em 20px;
        padding: 0 15px;

        td {
          vertical-align: top;
        }

        &.key-value {
          td:first-child {
            font-weight: bold
            width: 150px
          }
        }
      }

      code {
        background: #F8F8F8
        border-radius: 5px;
        border: 1px solid #DDDDDD
        display: inline;
        padding: 2px 7px
        font-size: 13px

        font-weight: normal
        font-family: Monaco, "HelveticaNeue", Helvetica, Arial, sans-serif

        line-height: normal
        color: #1E1E1E
      }

      pre {
        background: #F8F8F8
        margin: 30px -30px
        padding: 20px 30px
        -webkit-font-smoothing: subpixel-antialiased

        code {
          background: none
          padding: 0
          display: block
          overflow: auto
          width: 100%

          border: none
          border-radius: 0
        }
      }

      .clip {
        border: 3px solid #F6F6F6
        max-width: 640px
        max-height: 310px
        margin: auto
        overflow: hidden
        margin: 20px 0

        img {
          margin: 0
          display: block
          border: none
        }
      }
    }

    &:after {
      content: ''
      display: block
      position: absolute
      bottom: 0
      left: -75px
      right: -75px
      height: 5px
      background: #F6F6F6
      border-radius: 5px
    }

    &:last-child {
      padding-bottom: 0
      margin-bottom: 0
    }

    &:last-child:after {
      display: none
    }
  }
}

footer.footer {
  margin-top: 40px

  border-bottom: 20px solid #3498DB

  section {
    border-top: 1px solid #F2F2F2

    .wrap {
      padding: 50px 25px
    }
  }

  h3 {
    font-size: 22px
    font-weight: 600
    margin: 0
  }

  .pagination {
    text-align: right
    border: none

    .wrap {
      padding: 20px 40px 25px 30px
    }

    .button {
      border: 2px solid #333333
      font-weight: 600
      color: #333333
      padding: 0 15px
      border-radius: 20px
      display: inline-block
      height: 35px
      line-height: 33px
      text-transform: uppercase
      font-size: 15px
      text-decoration: none
      margin-left: 15px

      .fa {
        margin-left: 2px
      }
    }
  }
}

@media only all and (min-width: 650px) {
  header.header {
    nav {
      padding: 30px
    }
  }

  article.main {
    padding: 30px
  }

  .wrap {
    width: 700px
  }
}